<%= form_for [@company, @job] do |f| %>
  <%= f.label :title, "Title:" %><br/>
  <%= f.text_field :title %><br/>

  <%= f.label :description, "Description:" %><br/>
  <%= f.text_field :description %><br/>

  <%= f.label :level_of_interest, "Level of Interest (-30 -> 30):" %><br/>
  <%= f.number_field :level_of_interest %><br/>

  <%= f.label :city, "City:" %><br/>
  <%= f.text_field :city %><br/>

  <%= f.label :category_id, "Category:" %><br/>
  <%= f.collection_select(:category_id, Category.all, :id, :title) %><br/>

  <%= f.submit %>
<% end %>
